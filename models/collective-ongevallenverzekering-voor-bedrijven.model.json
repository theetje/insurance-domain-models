        },
        {
          "name": "bsn",
          "type": "string",
          "required": false,
          "description": "Burgerservicenummer (alleen voor werknemers en vrijwilligers)",
          "siviReference": "AFD.Party.BSN",
          "example": "123456789"
        },
        {
          "name": "functie",
          "type": "string",
          "required": false,
          "description": "Functie binnen het bedrijf",
          "siviReference": "AFD.Party.Function",
