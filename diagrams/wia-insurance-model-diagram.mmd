    }

    class Coverage {
        +coverageType string
        +startDate Date
        +endDate Date
        +insuredAmount number
        +currency string
        +benefitPercentage number
        <<Coverage>>
        +siviRef: AFD.Coverage
    }

    class Party {
        +partyRole string
        +organizationName string
        +kvkNumber string
        +street string
        +number string
        +postalCode string
        +city string
        <<Party>>
        +siviRef: AFD.Party
